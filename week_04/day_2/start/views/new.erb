<form method="post" action="/pizza-orders">
  <label for="first_name">First Name:</label>
  <input id="first_name" type="text" name="first_name"/></br>

  <label for="last_name">Last Name:</label>
  <input id="last_name" type="text" name="last_name"/></br>

  <label for="pizza-select">Select a Pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="Margharita">Margharita</option>
    <option value="Calzone">Calzone</option>
  </select></br>

  <label for="quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity"/></br>

  <input id="submit" type='submit' value="Order Pizza"/>

</form>
